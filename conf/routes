# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                              controllers.LongPolling.view
GET     /cursorPositionFeed/:worksheet controllers.LongPolling.cursorPositionFeed(worksheet: String)
POST    /setCursorPostion              controllers.LongPolling.postCursorPosition

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
